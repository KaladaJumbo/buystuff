<h1>Register as a Customer</h1>

<% @customer.errors.full_messages.each do |e|%>
    <p><%= e%></p>
<%end%>
<br>
<br>
<%= form_for @customer do |f| %>
    <%= f.label :name%>
    <br>
    <%= f.text_field :name%>
    <br>
    <br>
    <%= f.label :password%>
    <br>
    <%= f.password_field :password%>
    <br>
    <br>
    <%= f.label :address%>
    <br>
    <%= f.text_area :address%>
    <br>
    <%= f.submit "Register now"%>
<%end%>